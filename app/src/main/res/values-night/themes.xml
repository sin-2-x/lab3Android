<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
    <style name="textColor">
        <item name="android:textColor">@color/white </item>
        <item name="android:color">@color/black </item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <color name="bgWidgetColor">#56747474</color>

    <style name="formDropDown">

        <item name="android:editable">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:minHeight">60dp</item>


        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/custom_editor_bkg</item>

        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">#aa828282</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>

        <item name="dropDownDrawable">@drawable/picker_dark</item>
        <item name="dropDownDrawableHeight">20dp</item>
        <item name="dropDownDrawableSpacing">15dp</item>
        <item name="dropDownDrawableWidth">35dp</item>
        <item name="dropDownListViewStyle">@layout/spinner_list</item>
    </style>
    <style name="picker">
        <item name="android:background">@drawable/picker_dark</item>
        <item name="android:backgroundTint">#ffffff</item>
    </style>
</resources>