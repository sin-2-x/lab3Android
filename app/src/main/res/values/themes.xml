<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />

    <color name="bgWidgetColor">#E1E0E0</color>
    <style name="textColor">
        <item name="android:textColor">@color/black </item>
        <item name="android:color">#5522aaff </item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="fab_3_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="formDropDown">

        <item name="android:editable">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:minHeight">60dp</item>


        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/custom_editor_bkg</item>

        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">#aa828282</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>

        <item name="dropDownDrawable">@drawable/picker</item>

        <item name="dropDownDrawableHeight">20dp</item>
        <item name="dropDownDrawableSpacing">15dp</item>
        <item name="dropDownDrawableWidth">35dp</item>
        <item name="dropDownListViewStyle">@layout/spinner_list</item>

    </style>
    <style name="picker">
        <item name="android:background">@drawable/picker</item>

        <item name="android:backgroundTint">#000000</item>
    </style>
</resources>